# BFF base URL — no trailing slash
# For local dev this is your Next.js BFF running locally
EXPO_PUBLIC_API_URL=http://localhost:3000

# Cognito settings — copy from CDK stack outputs (CognitoAuthStack)
# EXPO_PUBLIC_AWS_REGION is the primary key; EXPO_PUBLIC_COGNITO_REGION is kept
# for backwards compatibility with existing tooling.
EXPO_PUBLIC_AWS_REGION=us-east-1
EXPO_PUBLIC_COGNITO_REGION=us-east-1
EXPO_PUBLIC_USER_POOL_ID=us-east-1_XXXXXXXXX
EXPO_PUBLIC_USER_POOL_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXX
